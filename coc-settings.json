{
    "npm.binPath": "/fred/oz013/smutch/conda_envs/nvim/bin/npm",
    "languageserver": {
        "clangd": {
            "command": "/fred/oz013/smutch/conda_envs/nvim/bin/clangd",
            "args": ["--background-index"],
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    },
    "diagnostic.checkCurrentLine": true,
    "diagnostic.messageTarget": "echo",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Args": ["--max-line-length=120"],
    "python.linting.flake8Path": "/fred/oz013/smutch/conda_envs/nvim/bin/flake8",
    "git.changedSign.hlGroup": "Conditional", 
    "git.removedSign.hlGroup": "diffRemoved",
    "git.addedSign.hlGroup": "diffAdded"
}
